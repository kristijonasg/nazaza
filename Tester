    <script type="text/javascript">
        var array = new Array();
        array[0] = "Keep trying.";
        array[1] = "Sharpen the knife.";
        array[2] = "This reed is not good enough. Shape more.";
        array[3] = "Are you sure it is not nightmare?";
        array[4] = "It still doesn't play, but now you have a cool smily face reed.";
        array[5] = "Scrape a little bit more in a tip.";
        array[6] = "The sound is terrible, keep scraping.";
        array[7] = "Good luck with that.";
        array[8] = "You overscraped this reed, take a blank one.";
        array[9] = "What would your teacher say.";
        array[10] = "Now it sounds like heaven, but opposite.";
        //array[11] = "";
        //array[12] = "";
        //array[13] = "";
        //array[14] = "";
        //array[15] = "";
        //array[16] = "";
        //array[17] = "";
         

        var picArray = new Array();
        picArray[0] = "css/Banner/1.gif";
        picArray[1] = "css/Banner/2.jpg";
        picArray[2] = "css/Banner/3.gif";
        picArray[3] = "css/Banner/4.gif";
        picArray[4] = "css/Banner/5.gif";
        picArray[5] = "css/Banner/6.gif";
        picArray[5] = "css/Banner/7.gif";

        var i = 5;
        var count = 0;

        function onClick() {
            var str = $("#span").text();
            if (str.match("Sta")) {
                $("#result").text("");
                intervalID = setInterval(btnStopCounter, 1000);
            } else if (str.match("Sto")) {
                i = 5;
                analyze(btn);
            }
            else
                alert("else");
        }

        function btnStopCounter() {
            var msg = "Stop(" + i + ")";
            $("#span").text(msg);
            $("#help").text("Recording...");
            i--;
            if (i == -2) {
                i = 5;
                analyze();
            }
        }

        function analyze() {
            clearInterval(intervalID);
            $("#btn").attr("disabled", "");
            $("#span").text("Analyzing...");
            $("#help").text("Please wait");
            setTimeout(displayResult, 2000);
        }

        function displayResult() {
            $("#btn").removeAttr("disabled");
            $("#span").text("Start over");
            $("#result").text(array[Math.floor((Math.random() * (array.length + 1)))]);
            $("#help").text("Press a button and play");
        }

        $("#main").ready(function () {
            idAdd = setInterval(banner, 3000);
        });

        function banner() {
            var x = "<img src='" + picArray[count] + "'/>";
            $(".add").html("<img src='" + picArray[count] + "'/>");
            count++;
            if (count == picArray.length) {
                count = 0;
            }
        }
    </script>
